# consider anything below the root-nodes as nodes of interest
# (ignore inferences that prove the query)
{
   ?x!r:component!r:evidence list:member ?i .
}
=> 
{
   ?i a x:NodeOfInterest
} .

# propagate x:NodeOfInterest downward
{
   ?parent a x:NodeOfInterest .
   ?parent!r:evidence list:member ?i .
   ?i a r:Inference .
}
=> 
{
   ?i a x:NodeOfInterest 
} .


# root-nodes = lemmas used _only_ by "top-level lemmas"
# (top-level lemmas prove the query)
{
   ?x!r:component!r:evidence list:member ?i .
   (
       ?y
       {
           ?y a x:NodeOfInterest .
           ?y!r:evidence list:member ?i 
       }
       ( )
   ) log:collectAllIn _:t .
}
=> 
{
   ?i a x:RootNode 
} .