#
{
   ?x a x:Leaf ;
       x:conclusionStr ?str .
   ( "<li class='fact'>" ?str "</li>" ) string:concatenation ?html .
}
=> 
{
   ?x x:output ?html 
} .

#
{
   ?inf a x:Node ;
       x:evidence ?evidences .
   # gather evidences & their strings
   ?evidences list:removeDuplicates ?evidences2 .
   (
       ?li
       {
           ?evidence list:in ?evidences2 .
           ?evidence x:collectLabel ?li .
       }
       ?lis
   ) log:collectAllIn _:t .
   ?evidences2 list:length ?lis!list:length .
   ?lis string:concatenation ?lisStr .
   #
   ?inf x:collectLabel ?label .
   #
   ( ?label ?lisStr ) string:concatenation ?html .
}
=> 
{
   ?inf x:output ?html 
} .
